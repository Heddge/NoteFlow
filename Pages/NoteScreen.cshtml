@page "{notePath}"
@using NoteFlow.Models
@using NoteFlow.Pages;
@using NoteFlow.Helpers;
@model NoteFlow.Pages.NoteScreenModel;
@{
    ViewData["Title"] = "NoteScreen";
    Layout = null;
}

<!DOCTYPE html>

<head>
    <style>
        /* Backplate settings */
        body {
            margin: 0;
            padding: 0;
            background: #191919;
            font-family: 'Inter', sans-serif;
            position: relative;
            width: 1920px;
            height: 2000px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        /* Topbar settings */
        .top-bar {
            position: fixed;
            width: 100%;
            height: 30px;
            top: 0;
            left: 0;
            background-color: #191919;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 0;
            box-sizing: border-box;
            z-index: 10000;
            border-bottom: none;
            -webkit-app-region: drag;
        }

        .top-bar-actions {
            display: flex;
            gap: 1px;
            align-items: center;
            -webkit-app-region: no-drag;
        }

        .logo-container {
            position: absolute;
            left: 20px;
            top: 50px;
            z-index: 1000;
        }

        .logo {
            width: 60px;
            height: 60px;
        }

        .nav-buttons {
            background: none;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            color: #aeaeae;
            -webkit-app-region: no-drag;
            width: 32px;
            height: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-buttons:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FFFFFF;
        }

        .close-btn:hover {
            background-color: rgb(148, 0, 0);
            color: #ffffff;
        }

        /* Стили для macOS кнопок */
        .macos-buttons {
            margin-left: 15px !important;
            margin-right: auto !important;
            gap: 8px;
            display: flex !important;
            visibility: visible !important;
            opacity: 1 !important;
        }

        .macos-buttons .nav-buttons {
            width: 12px !important;
            height: 12px !important;
            border-radius: 50% !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            background: none !important;
            border: none !important;
            padding: 0 !important;
            min-width: 12px !important;
            min-height: 12px !important;
        }

        .macos-buttons .nav-buttons:hover {
            transform: scale(1.1);
        }

        .macos-buttons .nav-buttons svg {
            display: block !important;
            visibility: visible !important;
        }

        /* Стили для Windows кнопок */
        .windows-buttons {
            margin-left: auto !important;
            gap: 1px;
            display: flex !important;
        }

        .main-content {
            position: absolute;
            width: 80vw;
            height: 100vh;
            left: 20vw;
            top: 60px;
            background: none;
            color: #191919;
            display: flex;
            flex-direction: column;
            padding: 2vw;
            box-sizing: border-box;
            overflow: visible;
            resize: none;
        }

        .note-title-input {
            width: 85%;
            background: transparent;
            border: none;
            font-family: 'Inter';
            font-weight: 700;
            font-size: 3vw;
            color: #ffffff;
            outline: none;
            margin-bottom: 2vh;
            padding: 1vh 0;
            position: absolute;
            margin-left: 2vw;
            overflow: none;
        }

        /* Rich text editor */
        .editor-container {
            display: flex;
            width: 95%;
            height: 80vh;
            margin-top: 10vh;
            margin-left: 2vw;
            background: #191919;
            border: none;
            border-radius: 5px;
            overflow: auto;
            padding-left: 0;
        }

        #richTextEditor {
            flex: 1;
            background: transparent;
            border: none;
            font-family: 'Inter', monospace;
            font-size: 18px;
            color: #ffffff;
            line-height: 28px;
            padding: 10px;
            outline: none;
            white-space: pre-wrap;
            overflow-wrap: break-word;
        }

        /* Плейсхолдер для contenteditable */
        #richTextEditor:empty:before {
            content: attr(data-placeholder);
            color: #666;
            font-style: italic;
        }

        #richTextEditor:focus:empty:before {
            content: attr(data-placeholder);
            color: #888;
        }

        /* Контекстное меню */
        .context-menu {
            position: fixed;
            background: #2d2d2d;
            border: 1px solid #555;
            border-radius: 5px;
            padding: 5px 0;
            z-index: 10001;
            display: none;
        }

        .context-menu button {
            display: block;
            width: 100%;
            padding: 8px 15px;
            background: none;
            border: none;
            color: white;
            text-align: left;
            cursor: pointer;
        }

        .context-menu button:hover {
            background: #404040;
        }

        /* Цвета для текста */
        .red {
            color: #ff6b6b;
        }

        .blue {
            color: #74b9ff;
        }

        .green {
            color: #55efc4;
        }

        .yellow {
            color: #fdcb6e;
        }

        .purple {
            color: #a29bfe;
        }

        /* Размер шрифта текста */
        .font-small {
            font-size: 14px !important;
        }

        .font-plain {
            font-size: 18px !important;
        }

        .font-big {
            font-size: 24px !important;
        }

        .font-very-big {
            font-size: 32px !important;
        }

        /* Разделитель в контекстном меню */
        .context-menu-div {
            margin: 5px 0;
            border: none;
            border-top: 1px solid #555;
        }
        .save-button {
            position: absolute ;
            bottom: 75px ;
            right: 25px ;
            background: #2c2c2c ;
            color: white ;
            width: 60px ;
            height: 60px ;
            border-radius: 50% ;
            cursor: pointer ;
            font-size: 24px ;
            display: flex ;
            align-items: center ;
            justify-content: center ;
            border: none ;
            z-index: 9999 ;
        }

        .save-button::before {
            content: '' ;
            position: absolute ;
            top: -2px ;
            left: -2px ;
            right: -2px ;
            bottom: -2px ;
            border-radius: 50% ;
            padding: 1px ;
            background: conic-gradient(from 0deg, rgba(152, 249, 255, 0.8), rgba(135, 38, 183, 0.8), rgba(152, 249, 255, 0.8)) ;
            -webkit-mask: 
                linear-gradient(#fff 0 0) content-box, 
                linear-gradient(#fff 0 0) ;
            mask: 
                linear-gradient(#fff 0 0) content-box, 
                linear-gradient(#fff 0 0) ;
            -webkit-mask-composite: xor ;
            mask-composite: exclude ;
            z-index: -1 ;
        }


    </style>
</head>

<body>
    <nav class="top-bar">
        @if (PlatformHelper.IsMacOS)
        {
            <!-- macOS стиль - кнопки слева -->
            <div class="top-bar-actions macos-buttons">
                <button class="nav-buttons close-btn" title="Закрыть" id="closeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#FF5F57" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Свернуть" id="minimizeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#FFBD2E" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Развернуть" id="maximizeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#28CA42" />
                    </svg>
                </button>
            </div>
        }
        else
        {
            <!-- Windows/Linux стиль - кнопки справа -->
            <div class="top-bar-actions windows-buttons">
                <button class="nav-buttons" title="Свернуть" id="minimizeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 12h14" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Развернуть" id="maximizeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <rect x="3" y="3" width="18" height="18" rx="2" stroke-width="2" />
                    </svg>
                </button>
                <button class="nav-buttons close-btn" title="Закрыть" id="closeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M18 6L6 18M6 6l12 12" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </button>
            </div>
        }
    </nav>

    <!-- Логотип вынесен отдельно -->
    <div class="logo-container">
        <img src="/Images/Logo.svg" class="logo" alt="NoteFlow" />
    </div>

    <!-- Контекстное меню -->
    <div id="contextMenu" class="context-menu">
        <button onclick="colorText('red')">Красный</button>
        <button onclick="colorText('blue')">Синий</button>
        <button onclick="colorText('green')">Зеленый</button>
        <button onclick="colorText('yellow')">Желтый</button>
        <button onclick="colorText('purple')">Фиолетовый</button>
        <hr style="margin: 5px 0; border-color: #555;">
        <button onclick="changeFontSize('small')">Маленький</button>
        <button onclick="changeFontSize('plain')">Средний(стандартный)</button>
        <button onclick="changeFontSize('big')">Большой</button>
        <button onclick="changeFontSize('very-big')">Очень большой</button>
    </div>

    <div class="main-content" style="overflow-y: visible">
        <form method="post" asp-page-handler="CreateOrEditNote">
            <input type="hidden" name="path" value="@Model._path" />
            <input type="Text" asp-for="NoteTitle" class="note-title-input" placeholder="Новая заметка"
                maxlength="35" />

            <!-- Hidden field for raw text -->
            <input asp-for="NoteContent" type="hidden" id="NoteContent" name="NoteContent" value="@Model.NoteContent" />

            <div class="editor-container">
                <div id="richTextEditor" contenteditable="true" class="text-editor"
                    data-placeholder="Введите ваш текст..." value="@Model.NoteContent">
                    @Html.Raw(Model.NoteContent)
                </div>
            </div>
            <button type="button" onclick="saveNote()" asp-page-handler="CreateOnEditNote" class="save-button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#cccccc" stroke-width="1.5">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14,2 14,8 20,8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10,9 9,9 9,11"/>
                </svg>
            </button>

        </form>
        <form method="post">
            <input type="hidden" name="path" value="@Model._path" />
            <button asp-page-handler="DeleteNote" type="submit" style="
                position: absolute;
                top: 60px;
                right: 20px;
                background: #9d0000;
                color: white;
                border: none;
                padding: 8px 16px;
                border-radius: 5px;
                cursor: pointer;">
                Удалить
            </button>
        </form>
    </div>

    <script>
        const { ipcRenderer } = require('electron');

        document.getElementById('minimizeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('minimize-window');
        });

        document.getElementById('maximizeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('maximize-window');
        });

        document.getElementById('closeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('close-window');
        });

        // Контекстное меню
        document.getElementById('richTextEditor').addEventListener('contextmenu', function (e) {
            e.preventDefault();

            const selection = window.getSelection();
            if (selection.toString().length > 0) {
                const contextMenu = document.getElementById('contextMenu');
                contextMenu.style.display = 'block';
                contextMenu.style.left = e.pageX + 'px';
                contextMenu.style.top = e.pageY + 'px';
            }
        });

        // Закрытие меню
        document.addEventListener('click', function () {
            document.getElementById('contextMenu').style.display = 'none';
        });

        // Универсальная функция для применения стилей (добавлено ради того чтобы текст мог быть одновременно и цветным и другого размера)
        function applyStyleToSelection(styleClass) {
            const selection = window.getSelection();
            if (selection.rangeCount === 0) return;

            const range = selection.getRangeAt(0);
            const selectedText = range.toString();
            if (selectedText.length === 0) return;

            // Проверяем, есть ли уже span с классами
            let span = document.createElement('span');

            // Если выделение уже внутри span, добавляем класс к существующему
            const parentSpan = range.startContainer.parentElement;
            if (parentSpan && parentSpan.tagName === 'SPAN' && range.toString() === parentSpan.textContent) {
                // Весь текст выделен внутри одного span - добавляем класс
                parentSpan.className += ' ' + styleClass;
            } else {
                // Создаем новый span с классом
                span.className = styleClass;
                span.textContent = selectedText;
                range.deleteContents();
                range.insertNode(span);
            }

            document.getElementById('contextMenu').style.display = 'none';
        }

        // Функции для цветов и размеров
        function colorText(color) {
            applyStyleToSelection(color);
        }

        function changeFontSize(size) {
            applyStyleToSelection('font-' + size);
        }

        // Сохранение заметки
        function saveNote() {
            const editor = document.getElementById('richTextEditor');
            let content = editor.innerHTML;
            document.getElementById('NoteContent').value = content;

            document.forms[0].submit();
        }

        document.addEventListener('DOMContentLoaded', function () {
            const editor = document.getElementById('richTextEditor');
            const existingContent = document.getElementById('NoteContent').value;

            if (existingContent && existingContent.trim() !== '') {
                editor.innerHTML = existingContent;
            } else {
                editor.innerHTML = '';
            }
        });
    </script>

</body>

