    <script>
        const { ipcRenderer } = require('electron');

        document.getElementById('minimizeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('minimize-window');
        });

        document.getElementById('maximizeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('maximize-window');
        });

        document.getElementById('closeBtn')?.addEventListener('click', () => {
            ipcRenderer.send('close-window');
        });
        document.getElementById('backBtn')?.addEventListener('click', () => {
            window.location.href = "/MainScreen";
        });

        // Контекстное меню
        document.getElementById('richTextEditor').addEventListener('contextmenu', function (e) {
            e.preventDefault();

            const selection = window.getSelection();
            if (selection.toString().length > 0) {
                const contextMenu = document.getElementById('contextMenu');
                contextMenu.style.display = 'block';
                contextMenu.style.left = e.pageX + 'px';
                contextMenu.style.top = e.pageY + 'px';
            }
        });

        // Закрытие меню
        document.addEventListener('click', function () {
            document.getElementById('contextMenu').style.display = 'none';
        });

        // Универсальная функция для применения стилей (добавлено ради того чтобы текст мог быть одновременно и цветным и другого размера)
        function applyStyleToSelection(styleClass) {
            const selection = window.getSelection();
            if (selection.rangeCount === 0) return;

            const range = selection.getRangeAt(0);
            const selectedText = range.toString();
            if (selectedText.length === 0) return;

            // Проверяем, есть ли уже span
            const parentSpan = range.startContainer.parentElement;

            if (parentSpan && parentSpan.tagName === 'SPAN' && range.toString() === parentSpan.textContent) {
                // Если весь текст выделен внутри span - заменяем классы
                const isColorClass = ['red', 'blue', 'green', 'yellow', 'purple', 'white'].includes(styleClass);
                const isSizeClass = styleClass.startsWith('font-');

                let newClasses = parentSpan.className.split(' ').filter(cls => {
                    if (isColorClass) {
                        return !['red', 'blue', 'green', 'yellow', 'purple', 'white'].includes(cls);
                    } else if (isSizeClass) {
                        return !cls.startsWith('font-');
                    }
                    return true;
                });

                newClasses.push(styleClass);
                parentSpan.className = newClasses.join(' ').trim();
            } else {
                // Создаем новый span
                const span = document.createElement('span');
                span.className = styleClass;
                span.textContent = selectedText;
                range.deleteContents();
                range.insertNode(span);
            }

            document.getElementById('contextMenu').style.display = 'none';
        }

        // Функции для цветов и размеров
        function colorText(color) {
            applyStyleToSelection(color);
        }

        function changeFontSize(size) {
            applyStyleToSelection('font-' + size);
        }

        // Сохранение заметки
        function saveNote() {
            const editor = document.getElementById('richTextEditor');
            let content = editor.innerHTML;
            document.getElementById('NoteContent').value = content;

            document.forms[0].submit();
        }

        // Горячие клавиши для мака
        @if (PlatformHelper.IsMacOS)
            {
                <text>
                    document.addEventListener('keydown', function (e) {
                                                    if (e.metaKey) { // Cmd key
                                                        const standardCombos = ['a','c','v','x','z','q','s','f','p','w'];
                    if (standardCombos.includes(e.key)){
                                                        return;
                                                    }
                    switch (e.key) {
                                                    case '1': colorText('red'); break;
                    case '2': colorText('blue'); break;
                    case '3': colorText('green'); break;
                    case '4': colorText('yellow'); break;
                    case '5': colorText('purple'); break;
                    case '6': colorText('white'); break;
                    case 'e': changeFontSize('plain'); break;
                    case 'r': changeFontSize('big'); break;
                    case 't': changeFontSize('very-big'); break;
                                                            }
                                                        }
                                                    });
                </text>
        }

            // Горячие клавиши для остальных платформ
            @if (!PlatformHelper.IsMacOS)
            {
                <text>
                    document.addEventListener('keydown', function (e) {
                                                    if (e.ctrlKey) {
                                                    // Не блокируем стандартные комбинации
                                                    const standardCombos = ['a', 'c', 'v', 'x', 'z', 'q', 'f', 'p', 'w', 'n', 'o', 't'];
                    if (standardCombos.includes(e.key.toLowerCase())) {
                                                    return;
                                                    }

                    e.preventDefault();
                    switch (e.key.toLowerCase()) {
                                                    case '1': colorText('red'); break;
                    case '2': colorText('blue'); break;
                    case '3': colorText('green'); break;
                    case '4': colorText('yellow'); break;
                    case '5': colorText('purple'); break;
                    case '6': colorText('white'); break;
                    case '7': changeFontSize('very-big'); break;
                    case '8': changeFontSize('big'); break;
                    case '9': changeFontSize('plain'); break;       
                                                            }
                                                        }
                                                    });
                </text>
        }

            document.addEventListener('DOMContentLoaded', function () {
                const editor = document.getElementById('richTextEditor');
                const existingContent = document.getElementById('NoteContent').value;

                if (existingContent && existingContent.trim() !== '') {
                    editor.innerHTML = existingContent;
                } else {
                    editor.innerHTML = '';
                }
            });

        // Функционал сайдбара
        const sidebar = document.getElementById('sidebar');
        const toggleSidebarBtn = document.getElementById('toggleSidebarBtn');
        const mainContent = document.querySelector('.main-content');
        const devModal = document.getElementById('devModal');
        const devModalOverlay = document.getElementById('devModalOverlay');

        // Состояние сайдбара
        let isSidebarCollapsed = false;

        // Переключение сайдбара
        toggleSidebarBtn.addEventListener('click', function (e) {
            e.stopPropagation(); // Предотвращаем всплытие

            isSidebarCollapsed = !isSidebarCollapsed;

            if (isSidebarCollapsed) {
                sidebar.classList.add('collapsed');
                toggleSidebarBtn.classList.add('collapsed');
                document.body.classList.add('sidebar-collapsed');
                document.body.classList.remove('sidebar-expanded');
            } else {
                sidebar.classList.remove('collapsed');
                toggleSidebarBtn.classList.remove('collapsed');
                document.body.classList.add('sidebar-expanded');
                document.body.classList.remove('sidebar-collapsed');
            }
        });

        // Показать модальное окно "В разработке"
        function showDevModal() {
            devModal.style.display = 'block';
            devModalOverlay.style.display = 'block';
        }

        // Закрытие окна по клику на оверлей
        devModalOverlay.addEventListener('click', function () {
            devModal.style.display = 'none';
            devModalOverlay.style.display = 'none';
        });

        // Закрытие окна по Escape
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                devModal.style.display = 'none';
                devModalOverlay.style.display = 'none';
            }
        });
    </script>

