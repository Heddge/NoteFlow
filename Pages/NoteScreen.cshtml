@page "{notePath}"
@using NoteFlow.Models
@using NoteFlow.Pages;
@using NoteFlow.Helpers;
@model NoteFlow.Pages.NoteScreenModel;
@{
    ViewData["Title"] = "NoteScreen";
    Layout = null;
}

<!DOCTYPE html>

<head>
    <style>
        /* Backplate settings */
        body {
            margin: 0;
            padding: 0;
            background: #191919;
            font-family: 'Inter', sans-serif;
            position: relative;
            width: 1920px;
            height: 2000px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .sidebar::-webkit-scrollbar,
        .main-content::-webkit-scrollbar,
        .editor-container::-webkit-scrollbar,
        body::-webkit-scrollbar {
            display: none !important;
            width: 0 !important;
            height: 0 !important;
        }

        .sidebar,
        .main-content,
        .editor-container {
            -ms-overflow-style: none !important;
            scrollbar-width: none !important;
        }

        /* Topbar settings */
        .top-bar {
            position: fixed;
            width: 100%;
            height: 30px;
            top: 0;
            left: 0;
            background-color: #191919;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 0;
            box-sizing: border-box;
            z-index: 10000;
            border-bottom: none;
            -webkit-app-region: drag;
        }

        .top-bar-actions {
            display: flex;
            gap: 1px;
            align-items: center;
            -webkit-app-region: no-drag;
        }

        .logo-container {
            position: absolute;
            left: 20px;
            top: 50px;
            z-index: 1000;
        }

        .logo {
            width: 60px;
            height: 60px;
        }

        .nav-buttons {
            background: none;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            color: #aeaeae;
            -webkit-app-region: no-drag;
            width: 32px;
            height: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-buttons:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FFFFFF;
        }

        .close-btn:hover {
            background-color: rgb(148, 0, 0);
            color: #ffffff;
        }

        /* Стили для macOS кнопок */
        .macos-buttons {
            margin-left: 15px !important;
            margin-right: auto !important;
            gap: 8px;
            display: flex !important;
            visibility: visible !important;
            opacity: 1 !important;
        }

        .macos-buttons .nav-buttons {
            width: 12px !important;
            height: 12px !important;
            border-radius: 50% !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            background: none !important;
            border: none !important;
            padding: 0 !important;
            min-width: 12px !important;
            min-height: 12px !important;
        }

        .macos-buttons .nav-buttons:hover {
            transform: scale(1.1);
        }

        .macos-buttons .nav-buttons svg {
            display: block !important;
            visibility: visible !important;
        }

        /* Стили для Windows кнопок */
        .windows-buttons {
            margin-left: auto !important;
            gap: 1px;
            display: flex !important;
        }

        .main-content {
            position: absolute;
            width: calc(100vw - 361px);
            height: calc(100vh - 60px);
            left: 361px;
            top: 60px;
            background: none;
            color: #191919;
            display: flex;
            flex-direction: column;
            padding: 2vw;
            box-sizing: border-box;
            overflow-y: hidden;
            overflow-x: hidden;
            resize: none;
            transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .note-title-input {
            width: 85%;
            background: transparent;
            border: none;
            font-family: 'Inter';
            font-weight: 700;
            font-size: 75px;
            color: #ffffff;
            outline: none;
            margin-bottom: 1vh;
            padding: 1vh 0;
            position: absolute;
            margin-left: 2vw;
            overflow: none;
        }

        /* Rich text editor */
        .editor-container {
            display: flex;
            width: 95%;
            height: 80vh;
            margin-top: 10vh;
            margin-left: 1vw;
            background: #191919;
            border: none;
            border-radius: 5px;
            overflow: hidden;
            padding-left: 0;
        }

        #richTextEditor {
            flex: 1;
            background: transparent;
            border: none;
            font-family: 'Inter', monospace;
            font-size: 18px;
            color: #ffffff;
            line-height: 28px;
            padding: 10px;
            outline: none;
            white-space: pre-wrap;
            overflow-wrap: break-word;
        }

        /* Плейсхолдер для contenteditable */
        #richTextEditor:empty:before {
            content: attr(data-placeholder);
            color: #666;
            font-style: italic;
        }

        #richTextEditor:focus:empty:before {
            content: attr(data-placeholder);
            color: #888;
        }

        /* Контекстное меню */
        .context-menu {
            position: fixed;
            background: #212121;
            border: 2px solid #202020;
            border-radius: 5px;
            padding: 5px 0;
            z-index: 10001;
            display: none;
        }

        .context-menu button {
            display: block;
            width: 100%;
            padding: 8px 15px;
            background: none;
            border: none;
            color: white;
            text-align: left;
            cursor: pointer;
        }
        
        .context-menu button:hover {
            background: #404040;
        }

        /* Цвета для текста */
        .red {
            color: #ff6b6b;
        }

        .blue {
            color: #74b9ff;
        }

        .green {
            color: #55efc4;
        }

        .yellow {
            color: #fdcb6e;
        }

        .purple {
            color: #a29bfe;
        }

        .white {
            color: #FFFFFF;
        }

        /* Размер шрифта текста */
        /*.font-small {
            font-size: 14px !important;
        }*/

        .font-plain {
            font-size: 18px !important;
        }

        .font-big {
            font-size: 32px !important;
        }

        .font-very-big {
            font-size: 50px !important;
        }

        /* Разделитель в контекстном меню */
        .context-menu-div {
            margin: 5px 0;
            border: none;
            border-top: 1px solid #555;
        }

        .save-button {
            position: absolute ;
            bottom: 150px ;
            right: 25px ;
            background: #2c2c2c ;
            color: white ;
            width: 60px ;
            height: 60px ;
            border-radius: 50% ;
            cursor: pointer ;
            font-size: 24px ;
            display: flex ;
            align-items: center ;
            justify-content: center ;
            border: none ;
            z-index: 9999 ;
        }

        .save-button::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            border-radius: 50%;
            padding: 1px;
            background: conic-gradient(from 0deg, rgba(152, 249, 255, 0.8), rgba(135, 38, 183, 0.8), rgba(152, 249, 255, 0.8));
            -webkit-mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            z-index: -1;
        }
        

        .delete-button {
            position: absolute;
            bottom: 10px;
            right: 25px;
            background: #2c2c2c;
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            z-index: 9999;
            transition: all 0.3s ease;
            box-shadow: 0 0 0 rgba(255, 0, 0, 0);
        }

        .delete-button:hover {
            background: #ff4444;
            box-shadow: 0 0 20px 5px rgba(255, 0, 0, 0.7);
            transform: scale(1.05);
        }

        .delete-button:hover svg {
            stroke: white;
        }

        .back-button {
            position: absolute;
            left: 10px;
            top: 10px;
            background: none;
            border: none;
            cursor: pointer;
            padding: 8px;
            border-radius: 4px;
            color: #aeaeae;
            z-index: 1000;
        }

        /* Основной сайдбар */
        .sidebar {
            position: fixed;
            left: 0;
            top: 100px;
            width: 250px;
            height: 75vh;
            background: radial-gradient(90.16% 143.01% at 15.32% 21.04%,
                    rgba(117, 117, 117, 0.2) 0%,
                    rgba(94, 98, 101, 0.0447917) 77.08%,
                    rgba(126, 126, 126, 0) 100%),
                linear-gradient(0deg, rgba(30, 30, 30, 0.98), rgba(30, 30, 30, 0.98)),
                #000000;
            z-index: 900;
            transform: translateX(0);
            transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            padding-top: 30px;
            overflow-y: hidden;
            overflow-x: hidden;
            border-radius: 0 24px 24px 0;
            position: relative;
        }

        .sidebar::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 0 24px 24px 0;
            padding: 1px;
            background: radial-gradient(circle at 15% 20%,
                    rgba(152, 249, 255, 0.3) 0%,
                    rgba(255, 255, 255, 0.2) 30%,
                    rgba(135, 38, 183, 0.1) 70%,
                    transparent 100%);
            -webkit-mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            mask:
                linear-gradient(#fff 0 0) content-box,
                linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
            z-index: -1;
        }

        .sidebar.collapsed {
            transform: translateX(-361px);
        }

        /* Кнопка сворачивания сайдбара */
        .toggle-sidebar-btn {
            position: fixed;
            width: 40px;
            height: 40px;
            left: 20px;
            top: 40px;
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 0;
            z-index: 1001;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.3s ease;
        }

        .toggle-sidebar-btn:hover {
            transform: scale(1.1);
        }

        .toggle-sidebar-btn.collapsed {
            left: 20px;
            transform: rotate(180deg);
        }

        .toggle-sidebar-btn.collapsed:hover {
            transform: rotate(180deg) scale(1.1);
        }

        /* Иконка внутри кнопки */
        .toggle-icon {
            width: 24px;
            height: 24px;
            position: relative;
            transition: transform 0.3s ease;
        }

        .toggle-icon-line {
            position: absolute;
            height: 2px;
            background: #FFFFFF;
            border-radius: 1px;
            transition: all 0.3s ease;
        }

        .toggle-icon-line:nth-child(1) {
            top: 6px;
            width: 24px;
        }

        .toggle-icon-line:nth-child(2) {
            top: 12px;
            width: 18px;
        }

        .toggle-icon-line:nth-child(3) {
            top: 18px;
            width: 12px;
        }

        .toggle-sidebar-btn.collapsed .toggle-icon-line:nth-child(1) {
            top: 12px;
            width: 24px;
            transform: rotate(45deg);
        }

        .toggle-sidebar-btn.collapsed .toggle-icon-line:nth-child(2) {
            opacity: 0;
        }

        .toggle-sidebar-btn.collapsed .toggle-icon-line:nth-child(3) {
            top: 12px;
            width: 24px;
            transform: rotate(-45deg);
        }

        /* Секции сайдбара */
        .sidebar-section {
            margin-left: 20px;
            margin-bottom: 40px;
            margin-top: 10px;
        }

        .sidebar-item {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
            cursor: pointer;
            transition: all 0.2s;
            padding: 2px 6px;
            border-radius: 8px;
            border: 1px solid transparent;
        }

        .sidebar-item:hover {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-icon {
            width: 27px;
            height: 27px;
            margin-right: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-title {
            font-family: 'Inter';
            font-style: normal;
            font-weight: 500;
            font-size: 24px;
            line-height: 29px;
            letter-spacing: 0.06em;
            color: #A6A6A6;
            white-space: nowrap;
        }

        /* Recent files section */
        .recent-files-section {
            margin-left: 27px;
            margin-top: 30px;
        }

        .recent-files-title {
            font-family: 'Inter';
            font-style: normal;
            font-weight: 600;
            font-size: 24px;
            line-height: 29px;
            color: #A6A6A6;
            margin-bottom: 20px;
        }

        /* Стили для файлов как в MainScreen */
        .file-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
            width: 283px;
        }

        .file-item {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            cursor: pointer;
            transition: all 0.2s;
            background: rgba(30, 30, 30, 0.5);
            position: relative;
            min-height: 60px;
        }

        .file-item:hover {
            background: rgba(40, 40, 40, 0.7);
        }

        .file-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter';
            font-weight: 600;
            font-size: 18px;
            color: #A6A6A6;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 6px;
            margin-right: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .file-title {
            font-family: 'Inter';
            font-style: normal;
            font-weight: 500;
            font-size: 16px;
            line-height: 20px;
            color: #A6A6A6;
            white-space: normal;
            overflow: hidden;
            text-overflow: ellipsis;
            flex: 1;
            word-wrap: break-word;
            max-width: 180px;
        }


        .sidebar-expanded .main-content {
            left: 361px;
            width: calc(100vw - 361px);
        }

        .sidebar-collapsed .main-content {
            left: 0;
            width: 100vw;
        }

        /* Всплывающее окно "В разработке" */
        .dev-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #191919;
            padding: 30px 40px;
            border-radius: 12px;
            z-index: 9999;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            border: none;
            animation: modalAppear 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            min-width: 300px;
            max-width: 400px;
            text-align: center;
        }

        .dev-modal-content {
            color: #FFFFFF;
            font-family: 'Inter';
            font-size: 22px;
            font-weight: 600;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
            letter-spacing: 0.5px;
        }

        .dev-modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 9998;
            animation: overlayAppear 0.3s ease;
        }
    </style>
</head>

<body>
    <nav class="top-bar">
        @if (PlatformHelper.IsMacOS)
        {
            <!-- macOS стиль - кнопки слева -->
            <div class="top-bar-actions macos-buttons">
                <!-- Кнопка "Назад" (домой) -->
                <button class="nav-buttons back-button-mac" title="На главную" id="backBtn">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M19 12H5M12 19l-7-7 7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </button>
                <button class="nav-buttons close-btn" title="Закрыть" id="closeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#FF5F57" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Свернуть" id="minimizeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#FFBD2E" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Развернуть" id="maximizeBtn">
                    <svg width="12" height="12" viewBox="0 0 12 12">
                        <circle cx="6" cy="6" r="6" fill="#28CA42" />
                    </svg>
                </button>
            </div>
        }
        else
        {
            <!-- Windows/Linux стиль - кнопки справа -->
            <div class="top-bar-actions windows-buttons">
                <button class="nav-buttons back-button" title="На главную" id="backBtn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M19 12H5M12 19l-7-7 7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Свернуть" id="minimizeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 12h14" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </button>
                <button class="nav-buttons" title="Развернуть" id="maximizeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <rect x="3" y="3" width="18" height="18" rx="2" stroke-width="2" />
                    </svg>
                </button>
                <button class="nav-buttons close-btn" title="Закрыть" id="closeBtn">
                    <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M18 6L6 18M6 6l12 12" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </button>
            </div>
        }
    </nav>

    <!-- Контекстное меню -->
    <div id="contextMenu" class="context-menu">
        <button onclick="colorText('red')">Красный</button>
        <button onclick="colorText('blue')">Синий</button>
        <button onclick="colorText('green')">Зеленый</button>
        <button onclick="colorText('yellow')">Желтый</button>
        <button onclick="colorText('purple')">Фиолетовый</button>
        <button onclick="colorText('white')">Белый</button>
        <hr style="margin: 5px 0; border-color: #555;">
        <!-- <button onclick="changeFontSize('small')">Маленький</button> -->
        <button onclick="changeFontSize('plain')">Сделать текстом</button>
        <button onclick="changeFontSize('big')">Сделать заголовком 2-го уровня</button>
        <button onclick="changeFontSize('very-big')">Сделать заголовком 1-го уровня</button>
    </div>

    <div class="main-content" style="overflow-y: visible">
        <form method="post" asp-page-handler="CreateOrEditNote">
            <input type="hidden" name="path" value="@Model._path" />
            <input type="Text" asp-for="NoteTitle" class="note-title-input" placeholder="Новая заметка"
                maxlength="35" />

            <!-- Hidden field for raw text -->
            <input asp-for="NoteContent" type="hidden" id="NoteContent" name="NoteContent" value="@Model.NoteContent" />

            <div class="editor-container">
                <div id="richTextEditor" contenteditable="true" class="text-editor"
                    data-placeholder="Введите ваш текст..." value="@Model.NoteContent">
                    @Html.Raw(Model.NoteContent)
                </div>
            </div>
            <button type="button" onclick="saveNote()" asp-page-handler="CreateOnEditNote" class="save-button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#cccccc" stroke-width="1.5">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14,2 14,8 20,8" />
                    <line x1="16" y1="13" x2="8" y2="13" />
                    <line x1="16" y1="17" x2="8" y2="17" />
                    <polyline points="10,9 9,9 9,11" />
                </svg>
            </button>
        </form>

    
    <form method ="post">
        <input type="hidden" name="path" value="@Model._path"/>
        <button asp-page-handler="DeleteNote" type="submit" class="delete-button save-button" style="bottom: 75px;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#cccccc" stroke-width="1.5">
                <path d="M3 6h18"/>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/>
                <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                <line x1="10" y1="11" x2="10" y2="17"/>
                <line x1="14" y1="11" x2="14" y2="17"/>
            </svg>
        </button>
    </form>
    </div>

    <!-- Всплывающее окно -->
    <div id="devModal" class="dev-modal">
        <div class="dev-modal-content">В разработке...</div>
    </div>
    <div id="devModalOverlay" class="dev-modal-overlay"></div>

    <button id="toggleSidebarBtn" class="toggle-sidebar-btn">
        <div class="toggle-icon">
            <div class="toggle-icon-line"></div>
            <div class="toggle-icon-line"></div>
            <div class="toggle-icon-line"></div>
        </div>
    </button>

    <!-- Сайдбар -->
    <aside id="sidebar" class="sidebar">
        <!-- Навигационные элементы -->
        <div class="sidebar-section">
            <div class="sidebar-item" onclick="showDevModal()">
                <div class="sidebar-icon">
                    <!-- SVG иконка поиска -->
                    <svg width="27" height="27" viewBox="0 0 27 27" fill="none">
                        <circle cx="11" cy="11" r="8" stroke="#A6A6A6" stroke-width="2" />
                        <path d="M18.5 17.5L25 24" stroke="#A6A6A6" stroke-width="2" />
                    </svg>
                </div>
                <div class="sidebar-title">Поиск</div>
            </div>

            <div class="sidebar-item" onclick="showDevModal()">
                <div class="sidebar-icon">
                    <!-- SVG иконка меню -->
                    <svg width="27" height="27" viewBox="0 0 27 27" fill="none">
                        <rect x="4" y="8" width="19" height="2" fill="#A6A6A6" />
                        <rect x="4" y="13" width="19" height="2" fill="#A6A6A6" />
                        <rect x="4" y="18" width="19" height="2" fill="#A6A6A6" />
                    </svg>
                </div>
                <div class="sidebar-title">Меню</div>
            </div>

            <div class="sidebar-item" onclick="showDevModal()">
