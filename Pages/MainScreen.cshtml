@page
@using NoteFlow.Pages;
@model NoteFlow.Pages.MainScreenModel;
@{
    ViewData["Title"] = "MainScreen";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #191919;
            font-family: 'Inter', sans-serif;
            position: relative;
            width: 1920px;
            height: 2000px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .top-bar {
            position: fixed;
            width: 100%;
            height: 30px;
            top: 0;
            left: 0;
            background-color: rgb(43, 43, 43);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 0;
            box-sizing: border-box;
            z-index: 10000;
            border-bottom: 1px solid #555;
            -webkit-app-region: drag;
        }

        .top-bar-actions {
            weight: 50;
            height: 40;
            display: flex;
            gap: 1px;
            align-items: right;
            -webkit-app-region: no-drag;
        }

        .logo {
            width: 40px;
            height: 40px;
            allign: left;
        }

        .nav-buttons
        {
            background: none;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            color: #aeaeae;
            -webkit-app-region: no-drag;
        }

        .nav-buttons:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FFFFFF;
        }

        .close-btn:hover {
            background-color: rgb(148, 0, 0);
            color: #ffffff;
        }

        /* Карточка добавления заметки */
        .card {
            position: absolute;
            width: 225.05px;
            height: 245px;
            left: 287px;
            top: 150px;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .card-bg {
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            background: radial-gradient(90.16% 143.01% at 15.32% 21.04%, rgba(117, 117, 117, 0.2) 0%, rgba(94, 98, 101, 0.0447917) 77.08%, rgba(126, 126, 126, 0) 100%), rgba(30, 30, 30, 0.98);
            border-radius: 41px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-button {
            position:absolute;
            width: 225.05px;
            height: 245px;
            left: 287px;
            top: 150px;
            background: none;
            border: none;
        }
        .notes-list {
            position: fixed;
            left: 0;
            top: 30px;
            width: 20vw;
            height: calc(100vh - 30px);
            background: #2d2d2d;
            padding: 20px;
            overflow-y: auto;
        }

        .add-note-text {
            font-family: 'Inter';
            font-weight: 500;
            font-size: 20px;
            line-height: 100%;
            letter-spacing: 0%;
            text-align: center;
            vertical-align: middle;
            color: #FFFFFF;
            width: 155px;
            height: 43px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Карточка заметки */
        .note-card {
            position: absolute;
            width: 225.05px;
            height: 245px;
            left: 567px;
            top: 150px;
            transition: transform 0.3s ease;
        }
        
        .note-card:hover {
            transform: translateY(-5px);
        }
        
        .note-card-bg {
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            background: radial-gradient(90.16% 143.01% at 15.32% 21.04%, rgba(117, 117, 117, 0.2) 0%, rgba(94, 98, 101, 0.0447917) 77.08%, rgba(126, 126, 126, 0) 100%), rgba(30, 30, 30, 0.98);
            border-radius: 41px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .note-title {
            position: absolute;
            width: 168px;
            height: 22px;
            left: 17px;
            top: 93px;
            font-family: 'Inter';
            font-weight: 600;
            font-size: 18px;
            line-height: 22px;
            display: flex;
            align-items: center;
            color: #DADADA;
        }

        .note-description {
            position: absolute;
            width: 194px;
            height: 68.73px;
            left: 16.63px;
            top: 123.05px;
            font-family: 'Inter';
            font-weight: 600;
            font-size: 18px;
            line-height: 22px;
            color: #A9A49C;
        }

        .note-timestamp {
            position: absolute;
            width: 101.99px;
            height: 17.74px;
            left: 62.08px;
            top: 208.42px;
            font-family: 'Inter';
            font-weight: 600;
            font-size: 13px;
            line-height: 16px;
            display: flex;
            align-items: center;
            text-align: center;
            color: #555554;
        }
        .notes-list {
            position: fixed;
            left: 0;
            top: 30px;
            width: 20vw;
            height: calc(100vh - 30px);
            background: #2d2d2d;
            padding: 20px;
            overflow-y: auto;
        }
        /* Карточка нового напоминания */
        .reminder-card {
            position: absolute;
            width: 225.05px;
            height: 209px;
            left: 287px;
            top: 450px;
            transition: transform 0.3s ease;
        }
        
        .reminder-card:hover {
            transform: translateY(-5px);
        }
        
        .reminder-card-bg {
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            background: radial-gradient(90.16% 143.01% at 15.32% 21.04%, rgba(117, 117, 117, 0.2) 0%, rgba(94, 98, 101, 0.0447917) 77.08%, rgba(126, 126, 126, 0) 100%), rgba(30, 30, 30, 0.98);
            border-radius: 41px;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .reminder-icon {
            font-family: 'Inter';
            font-weight: 500;
            font-size: 20px;
            line-height: 100%;
            letter-spacing: 0%;
            text-align: center;
            vertical-align: middle;
            color: #FFFFFF;
            width: 155px;
            height: 43px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    </style>
</head>

<body>
    <nav class="top-bar">
        <div class="logo-container">
            <img src="/Images/Logo.svg" class="logo" alt="NoteFlow" />
        </div>

        <div class="top-bar-actions">
            <button class = "nav-buttons" title="Свернуть" id="minimizeBtn">
                <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M5 12h14" stroke-width="2" stroke-linecap="round" />
                </svg>
            </button>

            <button class = "nav-buttons" title="Развернуть" id="maximizeBtn">
                <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="3" y="3" width="18" height="18" rx="2" stroke-width="2" />
                </svg>
            </button>

            <button class = "nav-buttons close-btn" title="Закрыть" id="closeBtn">
                <svg width="32" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M18 6L6 18M6 6l12 12" stroke-width="2" stroke-linecap="round" />
                </svg>
            </button>
        </div>
    </nav>
    
    <!-- Карточка добавления заметки -->
    <button class="card card-button" id="toEditNoteScreen">
        <div class="card-bg">
            <div class="add-note-text">Добавить заметку</div>
        </div>
    </button>

    <!-- Карточка заметки -->

    <!-- Карточка нового напоминания -->
    <div class="reminder-card">
        <div class="reminder-card-bg">
            <div class="reminder-icon">Новое напоминание</div>
        </div>
    </div>

    <div class=".notes-list">
        <h3 style="color: white; margin-bottom: 15px;">Мои заметки</h3>
        @if (Model.NoteTitles.Count() > 0)
            @for (int i = 0; i < Model.NoteTitles.Count(); i++)
            {
                <div class="note-item" style="
                    color: #b9b9b9;
                    padding: 2px;
                    margin-bottom: 2px; <!-- Для отсупа между эл-тами -->
                    cursor: pointer;
                    border-radius: 5px;">
                    @Model.NoteTitles[i]
                </div>

                <div class="note-card" style="margin-left: @(i*240)px;">
                    <div class="note-card-bg">
                        <div class="note-title">@Model.NoteTitles[i]</div>
                        <div class="note-description">Описание заметки...</div>
                        <div class="note-timestamp">2 часа назад</div>
                    </div>
                </div>
            }
        else
        {
            <div style="color: #666; font-style: italic;">
            Заметок пока нет
            </div>
        }
    </div>
</body>

<script>
    const { ipcRenderer } = require('electron');
    document.getElementById('minimizeBtn').addEventListener('click', () => {
    ipcRenderer.send('minimize-window');
    });
    document.getElementById('maximizeBtn').addEventListener('click', () => {
    ipcRenderer.send('maximize-window');
    });
    document.getElementById('closeBtn').addEventListener('click', () => {
    ipcRenderer.send('close-window');
    });

    document.getElementById('toEditNoteScreen').addEventListener('click', function () {
        window.location.href = '/NoteScreen';
    });
</script>